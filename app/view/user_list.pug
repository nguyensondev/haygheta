extends ./layout

block content
    .row
        table.table.table-hover.table-bordered
            thead
                tr
                    th Tên đăng nhập
                    th Mật khẩu
                    th Quyền
                    th Thời gian đăng ký
                    th Cập nhật gần đây
                    th Sửa
                    th Xoá
            tbody
                each item in users
                    tr(class="item-id-" + item._id)
                        td= item.name
                        td= item.password
                        td= item.role
                        td= moment(item.meta.createAt).format('YYYY-MM-DD H:mm:ss')
                        td= moment(item.meta.updateAt).format('YYYY-MM-DD H:mm:ss')
                        td
                            a(target="_blank", href="/admin/user_update/" + item._id) Sửa
                        td
                            button.btn.btn-danger.del(type="button", data-id=item._id) Xoá
    script(src="/javascripts/deleteUser.js")
