<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('common/head'); %>
  <title><%= title %></title>
</head>
<body>
  <%- include('common/header'); %>
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <embed src="<%= movie.flash%>" allowFullScreen="true",
        quality="high" width="720" height="600" type="application/x-shockwave-flash">
      </div>
      <div class="col-md-5">
        <dl class="dl-horizontal">
          <dt>Tên phim</dt>
          <dd><%= movie.title %></dd>
          <dt>Đạo diễn</dt>
          <dd><%= movie.doctor %></dd>
          <dt>Xuất xứ</dt>
          <dd><%= movie.country %></dd>
          <dt>Ngôn ngữ</dt>
          <dd><%= movie.language %></dd>
          <dt>Năm</dt>
          <dd><%= movie.year %></dd>
          <dt>Giới thiệu</dt>
          <dd><%= movie.summary %></dd>
        </dl>
      </div>
    </div>
  </div>
</body>
</html>